extends ../templates/layout

block content
  form(action='/users/', method='POST')
    .row
      .col-md-6
        .form-group
          label(for='userName') Benutzername *:
          input.form-control(id='userName', name='userName', type='text', placeholder='Benutzername', required)
      .col-md-6
        .form-group
          label(for='password') Passwort *:
          input.form-control(id='password', name='password', type='password', placeholder='Passwort', required)
    .row
      .col-md-12
        .form-group
          label(for='email') E-Mail *:
          input.form-control(id='email', name='email', type='email', placeholder='E-Mail', required)
    .row
      .col-md-6
        .form-group
          label(for='firstName') Vorname:
          input.form-control(id='firstName', name='firstName', type='text', placeholder='Vorname')
      .col-md-6
        .form-group
          label(for='lastName') Nachname:
          input.form-control(id='lastName', name='lastName', type='text', placeholder='Nachname')
    button.btn.btn-primary(type='submit') Absenden